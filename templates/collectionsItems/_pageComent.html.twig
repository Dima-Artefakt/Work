	<script>
		setInterval(function () {
$.ajax({
method: 'POST',
url: "/collectionPage/addComment/" + {{ itemPageCollection.id }}
}).done(function (data) {
$('.js-last-comments').html(data);
});
}, 20000);
	</script>
{% endblock %}
