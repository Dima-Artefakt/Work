{% extends 'base.html.twig' %}
{% block body %}

	<div class="container">
		<div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8">
			<div class="f2-s-1 p-r-30 m-tb-6">
				<a href="{{ path('hоme_page') }}" class="breadcrumb-item f1-s-3 cl9">
					Домашняя
				</a>

				<a class="breadcrumb-item f1-s-3 cl9">
					Добавление статьи 
				</a>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-10 ml-md-auto">
				<div class="card bg-light mb-3 mt-5" style="width: 800px">
					<div class="card-body">
						<div class="card-header mb-3">Добавить статью</div>
						{{ form_start(collectionForm) }}
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(collectionForm.name, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ tinymce_init() }}
								{{ form_row(collectionForm.description) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(collectionForm.topic, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								<div>
									{{ form_row(collectionForm.img, {'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
								<button type="submit" class="btn btn-primary">
									<i class="fa fa-btn fa-user"></i>
									Создать
								</button>
							</div>
						</div>
						{{ form_end(collectionForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
