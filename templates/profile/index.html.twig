{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<div class="container">
		<div
			class="main-body">
			<!-- Breadcrumb -->
			<div class="container">
				<div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8">
					<div class="f2-s-1 p-r-30 m-tb-6">
						<a href="{{ path('hоme_page') }}" class="breadcrumb-item f1-s-3 cl9">
							Домашняя
						</a>

						<a class="breadcrumb-item f1-s-3 cl9">
							Blog
						</a>
					</div>

					{# <div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
																<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
																<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
																	<i class="zmdi zmdi-search"></i>
																</button>
															</div> #}
				</div>
			</div>
			<!-- /Breadcrumb -->

			<!-- Profile -->
			<div class="row gutters-sm">
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								{% if itemUser.imgAvatar %}
									<img src={{asset('images/profile/' ~ itemUser.getImgAvatar())}} alt="Avatar" class="rounded-circle" width="220">
								{% else %}
									<img src="{{asset('images/profile/ProfileImgEmpty.jpg' )}}" alt="Avatar" class="rounded-circle" width="220">
								{% endif  %}
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-8 mb-3">
					<div class="card">
						<ul class="list-group list-group-flush">
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline">
										<circle cx="12" cy="12" r="10"></circle>
										<line x1="2" y1="12" x2="22" y2="12"></line>
										<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
									</svg>Website</h6>
								<span class="text-secondary"></span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline">
										<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
									</svg>Github</h6>
								<span class="text-secondary"></span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info">
										<path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
									</svg>Twitter</h6>
								<span class="text-secondary"></span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger">
										<rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
										<path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
										<line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
									</svg>Instagram</h6>
								<span class="text-secondary"></span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary">
										<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
									</svg>Facebook</h6>
								<span class="text-secondary"></span>
							</li>
						</ul>
					</div>
				</div>

				<div class="col-md-12">
					<div class="card mb-3">
						<div class="card-body">
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Full Name</h6>
								</div>
								<div class="col-sm-9 text-secondary text-right">
									{# {% if edit %} #}
									{# <input type="text" class="form-control" value="{{ itemUser.name }}"> #}

									{# {% else %} #}
								{{ itemUser.name }}
									{# {% endif %} #}
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary  text-right">
									{{ itemUser.Email }}
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Phone</h6>
								</div>
								<div class="col-sm-9 text-secondary  text-right">
									{{ itemUser.Phone }}
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Mobile</h6>
								</div>
								<div class="col-sm-9 text-secondary  text-right">
									{{ itemUser.Mobile }}
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Address</h6>
								</div>
								<div class="col-sm-9 text-secondary  text-right">
									{{ itemUser.Address }}
								</div>
							</div>
							<hr>
							<div class="row">
								<div
									class="col-sm-12">{# <a class="btn btn-info " target="__blank" href="#">Edit</a> #}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Profile -->

			<!-- post -->

				{% if itemsCollectionUser|length > 0 %}
					<div class="row gutters-sm"> <div class="card mb-3">
						<div class="card-body">
							<div class="row">
								{% for key,itemColl in itemsCollectionUser %}
									<div
										class="col-sm-6 p-r-25 p-r-15-sr991">
										<!-- Item latest -->
										<div class="m-b-45">
											<a href="{{ path('collectionPage',{id: itemColl.id()}) }}" class="wrap-pic-w hov1 trans-03">
												<img src={{asset('images/collection/' ~ itemColl.getImg())}} alt="IMG">
											</a>

											<div class="p-t-16">
												<h5 class="p-b-5">
													<a href="{{ path('collectionPage',{id: itemColl.getId()}) }}" class="f1-m-3 cl2 hov-cl10 trans-03">
														{{ itemColl.getName() }}
													</a>
												</h5>

												<span
													class="cl8">
													{# <a href="#" class="f1-s-4 cl8 hov-cl10 trans-03"> #}
													{{ itemColl.getUser().getName() }}
													{# </a> #}

													<span class="f1-s-3 m-rl-3">
														-
													</span>

													<span class="f1-s-3">
														{{ itemColl.getCreateDate()| date("d-m-Y H:i:s")}}
													</span>
												</span>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
							{# <!-- Pagination -->
							<div class="flex-wr-s-c m-rl--7 p-t-15">
								<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7 pagi-active">1</a>
								<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7">2</a>
							</div> #}
						</div>
					</div>
				{% endif %}

			</div>
			<!-- post -->

		</div>
	{% endblock %}
